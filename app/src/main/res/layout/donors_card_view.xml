<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:elevation="99dp"
    android:layout_margin="7dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:background="@drawable/cv_background"
        android:orientation="vertical"
                >

        <TextView
            android:id="@+id/CV_name"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:textColor="#999" />

        <TextView
            android:id="@+id/CV_age"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_above="@+id/CV_mobile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:textColor="#999" />

        <TextView
            android:id="@+id/CV_bloodgrp"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_above="@+id/CV_age"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:textColor="#999" />

        <TextView
            android:id="@+id/CV_mobile"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp"
            android:textColor="#999" />

        <ImageButton
            android:id="@+id/CV_callBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/CV_name"
            android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="14dp"
            app:srcCompat="@android:drawable/sym_call_outgoing" />

    </RelativeLayout>

</android.support.v7.widget.CardView>