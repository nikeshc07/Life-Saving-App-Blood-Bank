<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.satwik.blooddonor.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/MREC_LOGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        app:srcCompat="@mipmap/mrec_xxxhdpi"
        android:layout_alignBottom="@+id/mreclogo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/TV_Quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A SINGLE PINT CAN SAVE THREE LIVES.A SINGLE GESTURE CAN CREATE A MILLION SMILES...."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Time"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_below="@+id/MREC_LOGO"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/TV_Quote"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Signup"
        android:layout_below="@+id/button_login"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login" />
</RelativeLayout>
