<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fillViewport="false"
    android:padding="10dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <EditText
        android:id="@+id/ET_emailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TV_EMAIL_ID"
        android:layout_alignBottom="@+id/TV_EMAIL_ID"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Enter your Email ID"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/ET_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Enter Your Username"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/TV_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/ET_user_name"
        android:layout_alignBottom="@+id/ET_user_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/ET_login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/TV_Retype_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/TV_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ET_login_username"
        android:layout_alignStart="@+id/ET_login_username"
        android:layout_below="@+id/ET_login_username"
        android:layout_marginTop="22dp"
        android:text="City"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/TV_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="State"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/TV_city"
        android:layout_alignLeft="@+id/TV_city"
        android:layout_alignStart="@+id/TV_city" />

    <TextView
        android:id="@+id/TV_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Mobile "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/TV_state"
        android:layout_alignLeft="@+id/TV_state"
        android:layout_alignStart="@+id/TV_state" />

    <TextView
        android:id="@+id/TV_Bloodgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TV_mobile"
        android:layout_alignStart="@+id/TV_mobile"
        android:layout_below="@+id/TV_mobile"
        android:layout_marginTop="24dp"
        android:text="Blood Group"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/TV_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Age"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/Spinner_BloodGroup"
        android:layout_alignLeft="@+id/TV_Bloodgroup"
        android:layout_alignStart="@+id/TV_Bloodgroup"
        android:layout_alignRight="@+id/TV_state"
        android:layout_alignEnd="@+id/TV_state" />

    <TextView
        android:id="@+id/TV_EMAIL_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TV_Age"
        android:layout_alignStart="@+id/TV_Age"
        android:layout_below="@+id/ET_age"
        android:layout_marginTop="17dp"
        android:text="Email ID"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/ET_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/ET_login_username"
        android:layout_alignBottom="@+id/ET_login_username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/ET_AREA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TV_city"
        android:layout_alignBottom="@+id/TV_city"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Enter your Area"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/Spinner_BloodGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/bloodgroups"
        android:layout_alignBaseline="@+id/TV_Bloodgroup"
        android:layout_alignBottom="@+id/TV_Bloodgroup"
        android:layout_alignLeft="@+id/ET_MOBILE"
        android:layout_alignStart="@+id/ET_MOBILE" />

    <EditText
        android:id="@+id/ET_MOBILE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Mobile no."
        android:inputType="phone"
        android:layout_alignBaseline="@+id/TV_mobile"
        android:layout_alignBottom="@+id/TV_mobile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/Spinner_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TV_state"
        android:layout_alignLeft="@+id/ET_MOBILE"
        android:layout_alignStart="@+id/ET_MOBILE"
        android:entries="@array/states" />

    <EditText
        android:id="@+id/ET_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter your age"
        android:inputType="number"
        android:layout_alignBaseline="@+id/TV_Age"
        android:layout_alignBottom="@+id/TV_Age"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/ET_org_mobileno_in_signup"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/CB_member_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TV_address"
        android:layout_marginTop="40dp"
        android:text="Already a member of some organization"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

    <TextView
        android:id="@+id/TV_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permanent Address"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBottom="@+id/ET_Address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_register"
        android:layout_toStartOf="@+id/btn_register" />

    <EditText
        android:id="@+id/ET_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Address"
        android:inputType="textPostalAddress"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/ET_emailid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/ET_org_name_in_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name Of Your Organization"
        android:inputType="textPersonName"
        android:layout_below="@+id/CB_member_org"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/ET_org_mobileno_in_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ET_org_name_in_signup"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Phone Number of the Organization"
        android:inputType="phone" />

    <TextView
        android:id="@+id/TV_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/ET_user_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ET_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:layout_alignBaseline="@+id/TV_password"
        android:layout_alignBottom="@+id/TV_password"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/TV_Retype_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-type Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/ET_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/TV_Bloodgroup"
        android:layout_alignEnd="@+id/TV_Bloodgroup" />

    <EditText
        android:id="@+id/ET_retype_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ET_login_username"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TV_Retype_password"
        android:ems="10"
        android:hint="Re-Enter your password"
        android:inputType="textPassword" />

</RelativeLayout>
</ScrollView>